<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.settings.AddFriendFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/friendTabLayout"

        app:tabSelectedTextColor="@color/primaryContainer"
        app:tabIndicatorColor="@color/primaryContainer"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/manageFriendTabItem"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestisci Amici"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/addFriendTabItem"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aggiungi amici"
            />

    </com.google.android.material.tabs.TabLayout>

    <EditText
        android:id="@+id/addFriendEditText"

        android:layout_marginTop="20dp"

        android:hint="add a friend..."

        android:layout_marginBottom="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="" />

</LinearLayout>