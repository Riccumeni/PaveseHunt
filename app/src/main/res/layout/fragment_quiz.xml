<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.quiz.QuizFragment">

    <View
        android:id="@+id/puzzleButton"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#555555"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/usernameTextView"

        app:layout_constraintLeft_toRightOf="@id/puzzleButton"
        app:layout_constraintRight_toLeftOf="@id/rankButton"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Username"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/pointsCircularIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:trackThickness="15dp"
        app:indicatorColor="#959595"
        app:trackColor="#1D1D1D"
        app:trackCornerRadius="5dp"
        app:indicatorSize="150dp"

        android:max="20"
        android:progress="5"


        app:layout_constraintBottom_toBottomOf="@id/quizButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextView" />

    <View
        android:id="@+id/rankButton"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#555555"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/pointsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="32sp"
        android:text="0"

        app:layout_constraintTop_toTopOf="@+id/pointsCircularIndicator"
        app:layout_constraintBottom_toBottomOf="@+id/pointsCircularIndicator"
        app:layout_constraintEnd_toEndOf="@+id/pointsCircularIndicator"
        app:layout_constraintStart_toStartOf="@+id/pointsCircularIndicator"

        />

    <Button
        android:id="@+id/quizButton"
        android:text="comincia il quiz"
        android:layout_marginBottom="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="150dp"
        android:layout_height="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>