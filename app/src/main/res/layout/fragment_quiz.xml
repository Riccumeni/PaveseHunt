<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.quiz.QuizFragment">

    <View
        android:id="@+id/puzzleButton"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#555555"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/usernameTextView"

        app:layout_constraintLeft_toRightOf="@id/puzzleButton"
        app:layout_constraintRight_toLeftOf="@id/rankButton"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Username"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <View
        android:id="@+id/rankButton"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#555555"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/pointsTextView"

        android:textSize="32sp"
        android:text="0"

        app:layout_constraintTop_toBottomOf="@id/usernameTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/quizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/quizButton"
        android:text="comincia il quiz"
        android:layout_marginBottom="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="150dp"
        android:layout_height="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>