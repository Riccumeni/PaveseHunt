<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/secondaryContainer"
    app:cardCornerRadius="10dp"
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/friendProfileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_empty"

                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="username"
            android:textSize="18sp"
            android:textColor="@color/onSecondaryContainer"
            android:fontFamily="@font/poppins"
            android:textFontWeight="600"

            android:layout_marginHorizontal="20dp"
            />

        <Button
            android:id="@+id/addFriendButton"
            style="?attr/materialIconButtonFilledStyle"
            app:cornerRadius="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/primaryContainer"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/baseline_add_24"
            android:drawableTint="@color/secondaryContainer"
            />

    </LinearLayout>


</androidx.cardview.widget.CardView>